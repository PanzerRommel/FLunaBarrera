
@model ML.Grupo

<div>
    <h2>Formulario de Grupo</h2>

    @using (Html.BeginForm("Form", "Grupo", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Nombregrupo, "Nombre del Grupo")
            @Html.EditorFor(model => model.Nombregrupo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombregrupo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdMateria, "ID de Materia")
            @Html.EditorFor(model => model.IdMateria, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdMateria, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdProfesor, "ID de Profesor")
            @Html.EditorFor(model => model.IdProfesor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdProfesor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    }
</div>
